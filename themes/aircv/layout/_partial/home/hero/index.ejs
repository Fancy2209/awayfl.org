
<%
// adds default data usign "theme/aircv/scripts/default-data.js" helper
let hero = (site.data.hero !== undefined) ? site.data.hero : defaultData('hero');
let social = (site.data.social !== undefined) ? site.data.social : defaultData('social');
%>

<!--========== HERO ==========-->
<div class="promo-block parallax-window" data-parallax="scroll" data-image-src="<%= hero.image %>" data-position="-150px center">
  <!--<h1 class="promo-block-title" style="text-align: center;"><%- hero.title %></h1>
  <p class="promo-block-text" style="text-align: center;"><%- hero.proposal_value %></p>-->
  <div class="container">
      <div class="row">
          <div class="col-sm-6">
              <div class="promo-block-divider">
                <h1 class="promo-block-title"><%- hero.title %></h1>
                <p class="promo-block-text" style="font-size:large; opacity: 0.8;"><%- hero.proposal_value %></p>                
              </div>
              
              <ul class="list-inline">
                  <%# social %>
                  <a href="https://github.com/awayfl/awayfl-player">
                    <image src="img/buttons/get-started-btn.png" style="width:131px;height:36px;"></image>
                  </a>
                  <a href="https://github.com/awayfl">
                    <image src="img/buttons/github-btn.png" style="width:131px;height:36px;"></image>
                  </a>
                  <a href="https://awayjs.github.io/docs/">
                    <image src="img/buttons/documentation-btn.png" style="width:151px;height:44px; vertical-align: middle;"></image>
                  </a>
                <% social.forEach(social => { %>
                  <!--<li><a title="<%= social.text %>" href="<%= social.href %>" class="social-icons"><i class="<%= social.icon %>"></i></a></li>-->
                  
                <% }); %>
              </ul>
          </div>
      </div>
      <!--// end row -->
  </div>
</div>
<!--========== HERO ==========-->